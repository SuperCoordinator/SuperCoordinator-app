<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="bkg" stylesheets="@../css/stylesheet.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="655.0" prefWidth="1044.0">
         <children>
            <Text fill="#fcfcfc" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="subtitles" text="Communication Protocol">
               <VBox.margin>
                  <Insets bottom="10.0" left="30.0" />
               </VBox.margin>
            </Text>
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="950.0">
               <children>
                  <ToggleButton fx:id="modbus" mnemonicParsing="false" prefHeight="40.0" prefWidth="200.0" styleClass="button_default" text="Modbus TCP/IP" textFill="#d9d9d9">
                     <toggleGroup>
                        <ToggleGroup fx:id="comProtocol" />
                     </toggleGroup>
                  </ToggleButton>
                  <Pane prefHeight="50.0" prefWidth="45.0" />
                  <ToggleButton fx:id="opcua" disable="true" mnemonicParsing="false" prefHeight="40.0" prefWidth="200.0" styleClass="button_default" text="OPC UA" textFill="#d9d9d9" toggleGroup="$comProtocol" />
